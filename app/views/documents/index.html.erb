<% content_for :body_class, 'documents index' %>

<h1>lipu pi toki pona <small>Toki Pona texts</small></h1>

<%= paginate @documents %>

<ul id="documents-list">
  
  <% @documents.each do |document| %>

  <li>
    <h2><%= link_to document.title, document %></h2>
    <p>by <%= link_to document.user.username, "#" %></p>
    <p><%= truncate(document.original_text, length: 140, omission: '...', separator: ' ') %>
    	<%= link_to('awen', document) %></p>
  </li>

  <% end %>

</ul>


